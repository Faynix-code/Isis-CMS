<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Le logement | Au pied du Morclan</title>

    <link
      rel="shortcut icon"
      href="/asset/img/icon/AU PIED DU MORCLAN.png"
      type="image/x-icon"
    />

    <link
      rel="stylesheet"
      type="text/css"
      href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
    />
    <link rel="stylesheet" href="/asset/css/style.css" />
    <link rel="stylesheet" href="/asset/css/slick/slick-theme.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"
    ></script>

    <script
      type="text/javascript"
      src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
    ></script>

    <script type="text/javascript">
      var $jq = jQuery.noConflict();
      $jq(document).ready(function () {
        $jq("#header").load("/asset/basic/header.html");
        $jq("#footer").load("/asset/basic/footer.html");
        $jq(".carousel").slick({
          dots: true,
          infinite: true,
          speed: 500,
          fade: true,
          cssEase: "linear",
          autoplay: true,
          autoplaySpeed: 2000,
          responsive: [
            {
              breakpoint: 962,
              settings: {
                arrows: false,
                dots: false,
              },
            },
          ],
        });
      });
    </script>

    <meta
      name="description"
      content="Location d'un appartement de 58  ㎡ 6/8  personnes à Châtel. Plein centre dans la résidence les rhododendrons au pied de la télécabine "
    />
    <html>
      <body>
        <script type="text/javascript">
          function save() {
            fetch("/admin/modify/logement/|Le logement", {
              method: "POST",
              headers: {
                "Content-Type": "text/html",
              },
              body: document.getElementById("body").innerHTML,
            });
          }
        </script>

        <section class="body" id="body" contenteditable="true">
          <%- body %>
        </section>
        <button onclick="save()">Sauvegarder les changements</button>
      </body>
    </html>
  </head>
</html>

